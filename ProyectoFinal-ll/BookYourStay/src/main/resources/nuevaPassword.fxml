<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="24.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.bookyourstay.controlador.NuevaPasswordControlador">
    <VBox alignment="CENTER" maxWidth="480.0" prefHeight="320.0" spacing="24.0" style="-fx-background-color: #d8dbe2;">

        <Label style="-fx-font-weight: BOLD;" text="CÓDIGO DE VERIFICACION" />
        <TextField fx:id="codigoField" alignment="CENTER" prefHeight="34.0" prefWidth="280.0" promptText="Ingresa el código enviado a tu correo">
            <VBox.margin>
                <Insets left="100.0" right="100.0" />
            </VBox.margin></TextField>

        <Label style="-fx-font-weight: BOLD;" text="NUEVA CONTRASEÑA" />
        <TextField fx:id="nuevaPasswordField" alignment="CENTER" prefHeight="35.0" prefWidth="280.0" promptText="Ingresa tu nueva contraseña">
            <VBox.margin>
                <Insets left="100.0" right="100.0" />
            </VBox.margin></TextField>

        <Button onAction="#restablecerPassword" prefHeight="38.0" prefWidth="141.0" style="-fx-background-color: #006600; -fx-text-fill: white;" text="Restablecer Contraseña" translateY="20.0" />

        <Label fx:id="mensajeLabel" style="-fx-text-fill: green;" text="" />
    </VBox>
</VBox>
