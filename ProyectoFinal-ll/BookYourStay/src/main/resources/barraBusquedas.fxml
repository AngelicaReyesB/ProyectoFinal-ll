<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="866.0" spacing="10" style="-fx-background-color: #009900;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.bookyourstay.controlador.BarraBusquedasControlador">

    <!-- Selector para el tipo de alojamiento (Casa, Apartamento, Hotel) -->
    <ComboBox fx:id="tipoAlojamiento" minHeight="40.0" onAction="#obtenerTipoAlojamiento" prefHeight="40.0" prefWidth="182.0" promptText="Tipo de alojamiento">
        <HBox.margin>
            <Insets left="10.0" right="10.0" />
        </HBox.margin>
    </ComboBox>

    <!-- Selector para la ciudad donde se encuentra el alojamiento -->
    <ComboBox fx:id="ciudadAlojamiento" minHeight="40.0" onAction="#obtenerAlojamientosCiudad" prefHeight="40.0" prefWidth="175.0" promptText="Ciudad">
        <HBox.margin>
            <Insets left="10.0" right="10.0" />
        </HBox.margin>
    </ComboBox>
   <ComboBox fx:id="rangoPrecios" minHeight="40.0" prefHeight="40.0" prefWidth="170.0" promptText="Rango de precios" />

    <!-- BotÃ³n para ver todos los alojamientos disponibles -->
    <Button fx:id="btnTodosAlojamientos" minHeight="40.0" minWidth="130.0" onAction="#obtenerAlojamientos" prefHeight="40.0" prefWidth="156.0" style="-fx-background-color: #006600; -fx-text-fill: white;" text="Todos los alojamientos">
        <HBox.margin>
            <Insets left="10.0" right="10.0" />
        </HBox.margin>
    </Button>
</HBox>
