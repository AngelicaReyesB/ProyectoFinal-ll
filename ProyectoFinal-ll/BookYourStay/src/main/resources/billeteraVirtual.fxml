<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="345.0" prefWidth="444.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.bookyourstay.controlador.BilleteraVirtualControlador">
    <VBox alignment="CENTER" maxWidth="480.0" prefHeight="320.0" prefWidth="371.0" spacing="20.0" style="-fx-background-color: #d8dbe2;">
        <Label style="-fx-font-weight: BOLD; -fx-font-size: 14;" text="SALDO DISPONIBLE:" />
        <Label fx:id="labelSaldoDisponible" prefHeight="18.0" prefWidth="102.0" />
        <Label alignment="CENTER" prefWidth="360.0" text="MONTO A RECARGAR" textAlignment="CENTER" wrapText="true">
            <VBox.margin>
                <Insets />
            </VBox.margin></Label>
        <TextField fx:id="TxtMontoRecarga" alignment="CENTER" maxWidth="360.0" minHeight="30.0" prefHeight="30.0" prefWidth="279.0" promptText="Ingrese el monto a recargar">
            <VBox.margin>
                <Insets left="50.0" right="50.0" />
            </VBox.margin></TextField>
        <Button fx:id="btnRegresarPanel" minHeight="40.0" minWidth="130.0" mnemonicParsing="false" onAction="#regresarPanel" style="-fx-background-color: #006600; -fx-text-fill: white;" text="Regresar" translateX="100.0" translateY="50.0" />
        <Button id="btnActivarCuenta" fx:id="btnRecargar" minHeight="40.0" minWidth="130.0" onAction="#recargarBilletera" style="-fx-background-color: #006600; -fx-text-fill: white;" text="Recargar" translateX="-100.0" translateY="-10.0" />
    </VBox>
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
</VBox>
