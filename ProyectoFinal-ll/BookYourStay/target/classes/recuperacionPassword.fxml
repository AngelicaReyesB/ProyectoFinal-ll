<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="24.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.bookyourstay.controlador.RecuperacionPasswordControlador">
    <VBox alignment="CENTER" maxWidth="480.0" prefHeight="320.0" spacing="24.0" style="-fx-background-color: #d8dbe2;">
        <Label alignment="CENTER" prefHeight="31.0" prefWidth="246.0" style="-fx-font-weight: BOLD;" text="RECUPERE SU CONTRASEÑA">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="360.0" style="-fx-font-weight: BOLD;" text="Ingrese su correo" textAlignment="CENTER" wrapText="true">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="correo" alignment="CENTER" maxWidth="360.0" minHeight="30.0" prefHeight="30.0" promptText="correo" />
        <Button id="btnActivarCuenta" fx:id="btnEnviarCodigo" minHeight="40.0" minWidth="130.0" onAction="#recuperacionPassword" style="-fx-background-color: #006600; -fx-text-fill: white;" text="Enviar Codigo" />
        <!-- Añadido fx:id="mensajeLabel" aquí -->
        <Label fx:id="mensajeLabel" />
    </VBox>
</VBox>

